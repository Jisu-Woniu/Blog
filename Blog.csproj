<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <NeutralLanguage>zh-CN</NeutralLanguage>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="links-info-schema.json" />
    <Content Remove="posts-info-schema.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="links-info-schema.json" />
    <None Include="posts-info-schema.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GiscusBlazor" Version="2.2.0" />
    <PackageReference Include="Markdig" Version="0.30.2" />
    <PackageReference Include="Markdown.ColorCode" Version="1.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.4" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <PackageReference Include="Microsoft.Fast.Components.FluentUI" Version="1.3.0" />
  </ItemGroup>

  <ProjectExtensions>
    <VisualStudio>
      <UserProperties wwwroot_4links-info_1json__JsonSchema="../links-info-schema.json" wwwroot_4posts-info_1json__JsonSchema="..\posts-info-schema.json" />
    </VisualStudio>
  </ProjectExtensions>
</Project>
