@page "/PostExample"
@using Markdig
@inject MarkdownPipeline _pipeline
@inject IJSRuntime _jsRuntime

@(new MarkupString(s))

@code {

    string s => Markdown.ToHtml(@"
# Header
**BOLD** and *ITALIC*

$e^{i\pi}+1=0$

```csharp
using System;

Console.WriteLine(""Hello World!"");
```
", _pipeline);


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        if (firstRender)
        {
            IJSObjectReference giscus = await _jsRuntime.InvokeAsync<IJSObjectReference>
                ("import", "./Pages/PostExample.razor.js");
            await giscus.InvokeVoidAsync("addGiscus");
        }
    }

}