@if (Name != null)
{
    <div class="link-card">

        <img class="link-icon ratio ratio-1x1" src="@Icon" alt="" crossorigin="anonymous" />

        <div class="link-content">
            <h3>
                @if (Link == null)
                {
                    <text>@Name</text>
                }
                else
                {
                    <a href="@Link" target="_blank">
                        @Name
                    </a>
                }
            </h3>
            @ChildContent
        </div>
    </div>
}
