@if (Name != null)
{
    <div class="link-card">
        @if (_display)
        {
            <div class="link-icon ratio ratio-1x1" style="background-image: url(@Icon)" />
        }
        <div class="link-content">
            <h3>
                @if (Link == null)
                {
                    <text>@Name</text>
                }
                else
                {
                    <a href="@Link" target="_blank">
                        @Name
                    </a>
                }
            </h3>
            @ChildContent
        </div>
    </div>
}
